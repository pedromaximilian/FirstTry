@model IEnumerable<FirstTry.Models.ToDo>

@{
    Layout = null;
}

<table class="table dataTable table-striped table-bordered display">
    <thead>
        <tr>
            <th hidden>

            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Done)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (ViewData["todoes"] != null)
        {
            @foreach (var item in (List<ToDo>)ViewData["todoes"])
            {
                <tr>
                    <td hidden>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Done)
                    </td>

                    <td>
                        <div class="btn-group" role="group" aria-label="editionGroup">
                            <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                            <a onclick="ShowDetails(@item.Id)" class="btn btn-info">Details</a>
                            <a onclick="Delete(@item.Id)" class="btn btn-danger remove">Delete</a>
                        </div>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
<script>
    var table = $('.dataTable').DataTable({
        responsive: true
    });
</script>


